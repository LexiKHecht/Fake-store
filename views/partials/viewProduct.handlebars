<div class='flex justify-between rounded-xl dark:border-dark-3'>
  <div class='flex flex-row justify-evenly'>
    <div class='w-full px-6 md:border-r border-transparent'>
      <div class='my-6'>

        
        <div
          class='mb-5 h-custom rounded-mdn flex flex-nowrap content-between'
        >
          <div class='object-scale-down aspect-square h-full max-h-dvh'>
            <img
              src={{image}}
              alt='product'
              class='object-scale-down aspect-square'
            />
          </div>
          <div>
           <button class="ml-8 mb-2 bg-darkblue text-ghostWhite shadow-lg hover:bg-teal hover:scale-10 focus:shadow-outline h-10 btn btn-xs sm:btn-sm md:btn-md lg:btn-wide">
            <a href='/api/buy/{{id}}'>Buy Now</a>
            </button>
              
            <span
              class='mb-[10px] block text-lg font-semibold text-dark dark:text-white'
            >
              ${{price}}
            </span>

            <h3 class='block mb-2 text-xl font-semibold text-dark dark:text-white sm:text-2xl md:text-lg 2xl:text-2xl'>

                {{title}}
            </h3>
            {{> ratingSystem}}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>